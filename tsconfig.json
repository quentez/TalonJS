{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "noErrorTruncation": false,
    "outDir": "bin",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "es2018",
    "typeRoots": [
      "./node_modules/@types",
      "./local_types"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/retyped-xpath-tsd-ambient/xpath.d.ts"
  ]
}
